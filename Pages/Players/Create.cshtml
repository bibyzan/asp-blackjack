@page
@model Blackjack.Pages.Players.CreateModel
@{
    ViewData["Title"] = "Save High Score";
}

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Player.Name" class="control-label"></label>
                <input id="name" asp-for="Player.Name" class="form-control" />
                <span asp-validation-for="Player.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Score" class="control-label"></label>
                <input readonly="readonly" id="score" asp-for="Player.Score" class="form-control" />
                <span asp-validation-for="Player.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Wins" class="control-label"></label>
                <input readonly="readonly" id="wins" asp-for="Player.Wins" class="form-control" />
                <span asp-validation-for="Player.Wins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Losses" class="control-label"></label>
                <input readonly="readonly" id="losses" asp-for="Player.Losses" class="form-control" />
                <span asp-validation-for="Player.Losses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<script>
    window.addEventListener('load', () => {
        $('#name')[0].value = sessionStorage.getItem('name');
        $('#score')[0].value = parseInt(sessionStorage.getItem('score'));
        $('#wins')[0].value = parseInt(sessionStorage.getItem('wins'));
        $('#losses')[0].value = parseInt(sessionStorage.getItem('losses'));
        sessionStorage.clear();
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
